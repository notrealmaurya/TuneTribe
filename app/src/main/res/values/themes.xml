<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DTxLoopPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@android:color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBarLight</item>


    </style>

    <style name="expandedBarText" parent="Theme.DTxLoopPlayer">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimary</item>
    </style>


    <!--    Navigation view-->
    <style name="NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="android:background">@drawable/mode_light_navigation_view</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>


    <!-- StatusBarLayoutStyle-->
    <style name="StatusBarLayoutStyle">
        <item name="android:background">@drawable/mode_light_bg_custom_appbar</item>
    </style>

    <!-- StatusBarSearchLayoutStyle-->
    <style name="StatusBarSearchLayoutStyle">
        <item name="android:background">@drawable/mode_light_bg_toolbar</item>
    </style>


    <!--  layout style-->
    <style name="LayoutStyle">
        <item name="android:background">@color/white</item>
    </style>

    <!--"TabLayoutStyle"-->
    <style name="TabLayoutStyle">
        <item name="tabIndicatorColor">#000000</item>
        <item name="tabSelectedTextColor">#000000</item>
        <item name="tabTextColor">#777777</item>
        <item name="android:background">@drawable/mode_light_bg_tablayout</item>
    </style>

    <!--"BackButtonStyle"-->
    <style name="BackButtonStyle">
        <item name="android:background">@drawable/mode_light_bg_backbutton</item>
    </style>

    <!--"AppCompatButton"-->
    <style name="AppCompatButton">
        <item name="android:background">@drawable/bg_shuffle</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--"EdiText"-->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/mode_light_edittext</item>
    </style>

    <!--NextPreviousRipple-->
    <style name="next_previous_ripple">
        <item name="android:background">@drawable/mode_light_bg_next_previous_ripple</item>
    </style>


    <!-- Custom style for the TextView -->
    <style name="TextViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Custom style for the TextViewSmall -->
    <style name="TextViewStyleSmall">
        <item name="android:textColor">#4D4C4C</item>
    </style>

    <!--    View line-->
    <style name="ViewStyle">
        <item name="android:background">#000000</item>
    </style>

    <!--    Shapeable image View-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!--    Bottom Dialog-->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ShoppingList.BottomSheetDialog</item>
    </style>

    <style name="ShoppingList.BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>


    <!--    Cardview-->
    <style name="CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!--    Pop up menu-->
    <style name="AppPopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
    </style>


</resources>
