<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <LinearLayout
        style="@style/LayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie_music.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/bottomMenuEqualizerOption"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/icon_equalizer"
            android:drawablePadding="20dp"
            android:gravity="center|start"
            android:paddingStart="20dp"
            android:text="Equalizer"
            android:textColor="@color/ImageViewAndTextViewColour" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ViewColor" />


        <TextView
            android:id="@+id/bottomMenuSleepModeOption"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="20dp"
            android:gravity="center|start"
            android:paddingStart="10dp"
            android:text="Sleep Mode"
            android:textColor="@color/ImageViewAndTextViewColour"
            app:drawableStartCompat="@drawable/icon_sleepmode" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/ViewColor" />


        <TextView
            android:id="@+id/bottomMenuAudioBoostOption"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableStart="@drawable/icon_audioboost"
            android:drawablePadding="20dp"
            android:gravity="center|start"
            android:paddingStart="17dp"
            android:text="Audio Boost"
            android:textColor="@color/ImageViewAndTextViewColour" />


    </LinearLayout>
</androidx.cardview.widget.CardView>