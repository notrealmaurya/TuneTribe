<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/LayoutStyle"
    tools:context=".Activities.FolderActivity">


    <LinearLayout
        android:id="@+id/layout_topBTN"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/FolderActivityBackBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            style="@style/BackButtonStyle"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/icon_left_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:singleLine="true"
            android:text="Folder list"
            style="@style/TextViewStyle"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/shuffleSongCheckboxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/totalFoldersFolderActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="0 folders"
            style="@style/TextViewStyleSmall"
            android:textSize="13sp" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="20dp"
            android:src="@drawable/icon_checkbox_empty" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/ViewStyle"
        android:layout_marginTop="10dp"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFolderActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/icon_scrollbar"
        android:layout_marginTop="20dp"/>


</LinearLayout>