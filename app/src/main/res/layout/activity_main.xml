<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainDrawerLayout"
    style="@style/LayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:sliderType="doorOut"
    tools:context=".MainActivity"
    tools:openDrawer="start">


    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_topbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:fontFamily="@font/font_title"
                android:gravity="start"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="TuneTribe"
                android:textColor="@color/ImageViewAndTextViewColour"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/SearchMusicViewMainActivity"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:padding="7dp"
                android:src="@drawable/icon_search" />


        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@android:color/transparent"
            app:layout_anchorGravity="bottom"
            app:tabGravity="fill"
            app:tabIndicatorAnimationMode="elastic"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorGravity="bottom"
            app:tabMode="fixed" />


    </LinearLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_PAGER"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/BottomPlayerHome"
        android:layout_below="@id/topLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/BottomPlayerHome"
        android:name="com.maurya.dtxloopplayer.fragments.NowPlayingBottomFragment"
        style="@style/LayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:minHeight="?attr/actionBarSize"
        android:visibility="visible"
        tools:layout="@layout/fragment_now_playing_bottom" />


</RelativeLayout>


