<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PopUpWindowStyle"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:elevation="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nameAtoZLayoutPopUpMenu"
        style="@style/PopUpWindowStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/bg_ripplefactor_without_corner"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:src="@drawable/icon_sort_a_to_z" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1.0"
            android:gravity="start"
            android:text="Name (A -> Z)"
            android:textColor="@color/ImageViewAndTextViewColour"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nameZtoALayoutPopUpMenu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:background="@drawable/bg_ripplefactor_without_corner"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:src="@drawable/icon_sort_z_to_a" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1.0"
            android:gravity="start"
            android:text="Name (Z -> A)"
            android:textColor="@color/ImageViewAndTextViewColour"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/largestFirstLayoutPopUpMenu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:background="@drawable/bg_ripplefactor_without_corner"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:src="@drawable/icon_up_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1.0"
            android:gravity="start"
            android:text="Size (Largest first)"
            android:textColor="@color/ImageViewAndTextViewColour"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/smallestFirstLayoutPopUpMenu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:background="@drawable/bg_ripplefactor_without_corner"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:src="@drawable/icon_down_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1.0"
            android:gravity="start"
            android:text="Size (Smallest first)"
            android:textColor="@color/ImageViewAndTextViewColour"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/newestFirstLayoutPopUpMenu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:background="@drawable/bg_ripplefactor_without_corner"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/icon_up_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1.0"
            android:gravity="start"
            android:text="Newest first"
            android:textColor="@color/ImageViewAndTextViewColour"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/oldestFirstLayoutPopUpMenu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:background="@drawable/bg_ripplefactor_without_corner"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/icon_down_arrow" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1.0"
            android:gravity="start"
            android:text="Oldest first"
            android:textColor="@color/ImageViewAndTextViewColour"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>